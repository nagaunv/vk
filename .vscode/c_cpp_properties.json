{
    "configurations": [
        {
            "name": "Win32",
            "browse": {
                "path": [
                    "${workspaceFolder}/*",
                     "${env:VK_SDK_PATH}/Include/**"
                ],
                "limitSymbolsToIncludedHeaders": true
            },
            "includePath": [
                "${env:VK_SDK_PATH}/Include/*",
                "${workspaceFolder}/*"
            ],
            "defines": [
                "_DEBUG",
                "UNICODE",
                "_UNICODE",
                "VK_USE_PLATFORM_WIN32_KHR",
                "USE_VULKAN_HPP"
            ],
            "cStandard": "c11",
            "cppStandard": "c++17",
            "intelliSenseMode": "msvc-x64"
        }
    ],
    "version": 4
}